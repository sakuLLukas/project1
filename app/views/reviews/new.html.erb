<div class="newreview">

<h1>Write a new review</h1>

<% if @review.errors.any? %>
    <ol>
        <% @review.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ol>
<% end %>

<%= form_for @review do |f| %>

    <div class="form-group">

        <%= f.label :title %>
        
        <%= f.text_field :title, :class => "form-control" %>

    </div>

    <div class="form-group">

        <%= f.label :description %>

        <%= f.text_field :description, :class => "form-control" %>

    </div>

    <div class="form-group">

        <%= f.label :games_id %>

        <%= f.select :game_id, Game.pluck(:title, :id), :include_blank => true, :class => "form-control" %>

    </div>

    <%= f.submit "Create a new review!", :class => "btn btn-secondary" %>
<% end %>

</div>